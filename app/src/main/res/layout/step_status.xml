<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="25sp"
        android:gravity="left"
        android:textColor="#000"
        android:fontFamily="sans-serif-light"
        android:text="Status de la necesidad"/>

    <LinearLayout
        android:id="@+id/btStatusSuccess"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp">

        <ImageView
            android:id="@+id/imgStatusSuccess"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:tint="@color/colorDisabled"
            android:src="@drawable/success_disabled"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:text="Atendida"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btStatusInProcess"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="17dp">

        <ImageView
            android:id="@+id/imgStatusInProcess"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:tint="@color/colorDisabled"
            android:src="@drawable/engineer_disabled"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:text="En proceso"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btStatusIncomplete"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="17dp">

        <ImageView
            android:id="@+id/imgStatusIncomplete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:tint="@color/colorDisabled"
            android:src="@drawable/error_disabled"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:text="No atendida"/>

    </LinearLayout>

</LinearLayout>